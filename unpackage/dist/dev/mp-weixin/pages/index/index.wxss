.indexContainer .header {
  display: flex;
  padding: 0rpx 5rpx;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 60rpx;
}
.indexContainer .header .search {
  width: 420rpx;
  height: 60rpx;
  background: #f5f5f5;
  position: relative;
}
.indexContainer .header .search .sousuo {
  width: 50rpx;
  height: 50rpx;
  padding-top: 5rpx;
  position: absolute;
}
.indexContainer .header .search input {
  width: 360rpx;
  height: 60prx;
  border: 1rpx solid #ccc;
  border-color: #f5f5f5;
  margin-left: 60rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 40rpx;
  color: #333;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  padding: 0 4rpx;
}
.indexContainer .navcroll {
  display: flex;
  white-space: nowrap /* 不换行 */;
}
.indexContainer .navcroll .navItem {
  display: inline-block;
  height: 40rpx;
  padding: 10rpx;
  font-size: 24rpx;
}
.indexContainer .navcroll .navItem.active {
  border-bottom: 3rpx solid #bb2c08;
}

